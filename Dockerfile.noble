FROM dalibo/buildpack:noble AS downloader

COPY --from=goreleaser/nfpm:v2.43.4 /usr/bin/nfpm /usr/bin/
COPY --from=ghcr.io/astral-sh/uv:latest /uv /uvx /usr/bin/

RUN set -ex; \
    apt-get update -y; \
    apt-get install -y --no-install-recommends \
        python3-pip \
        python3-setuptools \
        pipx \
    ; \
    apt-get clean; \
    rm -rf \
        /var/lib/apt/lists/* \
        /var/log/apt \
        /var/log/dpkg.log \
        /var/log/alternatives.log \
    ; \
    :

RUN PIPX_BIN_DIR=/usr/local/bin pipx install pep440deb
