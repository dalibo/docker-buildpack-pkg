FROM dalibo/buildpack:noble AS downloader

RUN set -ex; \
    cd /tmp; \
    curl --location --output nfpm.tar.gz https://github.com/goreleaser/nfpm/releases/download/v2.40.0/nfpm_2.40.0_Linux_x86_64.tar.gz ; \
    tar --extract --file /tmp/nfpm.tar.gz nfpm; \
    chmod +x ./nfpm; \
    ./nfpm --version; \
    :

FROM dalibo/buildpack:noble

COPY --from=downloader /tmp/nfpm /usr/local/bin/nfpm

RUN set -ex; \
    nfpm --version ; \
    apt-get update -y; \
    apt-get install -y --no-install-recommends \
        build-essential \
        python3-pip \
        lsb-release \
    ; \
    apt-get clean; \
    rm -rf \
        /usr/share/postgresql/*/man \
        /var/lib/apt/lists/* \
        /var/log/apt \
        /var/log/dpkg.log \
        /var/log/alternatives.log \
    ; \
    :

RUN set -ex; \
    pip3 --no-cache-dir install --break-system-packages \
        pep440deb \
    ; \
    :
